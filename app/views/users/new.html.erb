<h1>Create a New User</h1>

<%= form_for @user do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%# if current_user.admin == true %>
  <%= f.label :admin %>
  <%= f.check_box :admin %>
  <%# end %>

  <%= f.submit %>

<% end %>
