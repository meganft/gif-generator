
<% @gifs.each do |gif| %>
<%= link_to image_tag(gif.image_path) %> <%= link_to "Delete", gif_path(gif), method: :delete %>
<% if !Favorite.find_by(user_id: current_user.id, gif_id: gif.id) %>
<%= link_to "Favorite!", { :controller => "favorites",
                          :action => "create",
                          :user_id => current_user.id,
                          :gif_id => gif.id },
                          method: "post" %>
  <% end %>
<% end %>
